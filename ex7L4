#include <stdlib.h>
#include <stdio.h>
#include <time.h>
/*
EXERCÍCIO 7 - Faça um programa para ordenar um vetor com 100 números inteiros. Imprima o vetor antes e após a ordenação.
*/

int main()
{
    srand(time(NULL));
    int vetor[100];
    int i, contador=0, troca, copia;
    
    for(i=0; i<100; i++){
        vetor[i] = rand() % 100;
    }
    
    for(i=0; i<100; i++){
            printf("%3d ", vetor[i]);
    }
    
    do{
        troca = 0;
        contador++;
        for(i=0; i<99; i++){
            if(vetor[i] > vetor[i+1]){
                copia = vetor[i];
                vetor[i] = vetor[i+1];
                vetor[i+1] = copia;
                troca = 1;
            }
        }
    }while(troca);
    
    printf("\n\n");
    for(i=0; i<100; i++){
            printf("%3d ", vetor[i]);
    }
    
    return 0;
}
