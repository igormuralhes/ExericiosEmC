#include <stdlib.h>
#include <stdio.h>
#include <time.h>
/*
EXERCÍCIO 8 - Faça um programa que calcule e imprima a soma de todos os elementos de uma matriz 5 x 7.
*/

int main()
{
    srand(time(NULL));
    int mat[5][7];
    int i, j, soma;
    
    for(i=0; i<5; i++)
        for(j=0; j<7; j++)
            mat[i][j] = rand() % 100;
    
    for(i=0; i<5; i++){
        for(j=0; j<7; j++){
            soma += mat[i][j];
        }
    }
    
    for(i=0; i<5; i++){
        for(j=0; j<7; j++){
            printf("%3d ", mat[i][j]);
        }
        printf("\n");
    }
    
    printf("\n\n");
    printf("%d ", soma);
    
    
    return 0;
}
