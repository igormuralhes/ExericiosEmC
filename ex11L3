#include <stdio.h>
#include <stdlib.h>

/*
EXERCÍCIO 11 - Um determinado material radioativo perde metade de sua massa a cada 50 segundos. Dada a massa 
inicial, em gramas, faça um programa que determine o tempo necessário para que essa massa se torne menor que 0,05 gramas.
*/

int main()
{
    int i=0, tempo=0;
    float massa;
    
    printf("Digite a massa do material em gramas: ");
    scanf("%f", &massa);
    
    while(massa >= 0.05){
        massa = massa / 2;
        tempo = tempo + 50;
    }
    
    printf("A massa final eh %.2f", massa);
    printf(" e o tempo total de %d segundos", tempo);
    
    /* Meu código abaixo
    printf("Digite a massa em gramas: ");
    scanf("%f", &massa);
    
    do{
        massa = massa / 2.0;
        i++;
    }
    while(massa > 0.05);
    
    printf("Tempo: %d s", i*50);
    
    */
    
    return 0;
}
