#include <stdio.h>
#include <stdlib.h>
#include <time.h>
/*
EXERCÍCIO 1 - Faça um programa que preencha um vetor de inteiros de tamanho 10 pedindo valores ao usuário. Em seguida,
calcule e salve num segundo vetor o quadrado de cada elemento do primeiro vetor. Por fim, imprima os dois vetores.
*/

int main()
{
    int i, j;
    int vet[10];
    int vet2[10];
    
    srand(time(NULL));

    for(i=0; i<10; i++){
        printf("Digite o valor inteiro: ");
        scanf("%d", &vet[i]);
    }
    
    for(i=0; i<10; i++){
        vet2[i] = vet[i] * vet[i];
    }
    
    printf("\nVetor 1\n");
    
    for(i=0; i<10; i++){
        printf("%d ", vet[i]);
    }
    
    printf("\nVetor 2\n");
    for(i=0; i<10; i++){
        printf("%d ", vet2[i]);
    }
    
    return 0;
}
