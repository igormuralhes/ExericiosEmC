#include <stdio.h>
#include <stdlib.h>

/*
EXERCÍCIO 14 - Faça um programa que calcule a média de salários de uma empresa, pedindo ao usuário a
quantidade de funcionários e o salário de cada funcionário. Ao final, o programa deve imprimir a
média dos salários informados, o salário mais alto e o salário mais baixo.
*/

int main()
{
    int i, func, saida;
    float salario=0, salarioMaior=0, salarioMenor=99999, salarioMedia, somaSalario=0;
    
    do{
        printf("Digite a quantidade de funcionarios: ");
        scanf("%d", &func);
    }
    while(func > 0);
    
    for(i=1; i<=func; i++){
        printf("Digite o valor do salario: ");
        scanf("%f", &salario);
        somaSalario = somaSalario + salario;
        
        if(salario <= salarioMenor){
            salarioMenor = salario;
        }
        
        if(salario >= salarioMaior){
            salarioMaior = salario;
        }
    }
    
    salarioMedia=somaSalario/func;
    
    printf("\nA media de salarios e: %.2f\nO menor salario e: %.2f\nO maior salario e: %.2f\n", salarioMedia, salarioMenor, salarioMaior);

    return 0;
}
