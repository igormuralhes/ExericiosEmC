#include <stdlib.h>
#include <stdio.h>
#include <time.h>
/*
EXERCÍCIO 12 - Faça um programa que imprima na tela a diagonal secundária de uma matriz 7 x 7.
*/

int main()
{
    srand(time(NULL));
    int tam = 7;
    int a[tam][tam];
    int i, j;
    
    for(i=0; i<tam; i++){
        for(j=0; j<tam; j++){
            a[i][j] = rand() % 100;
        }
    }
    
    //matriz a
    printf("\nMatriz A\n");
    for(i=0; i<tam; i++){
        for(j=0; j<tam; j++){
            printf("%3d ", a[i][j]);
        }
        printf("\n");
    }
    
    
    //Diagonal principal
    printf("\n\nDiagonal Principal\n");
    for(i=0; i<tam; i++){
            printf("%3d ", a[i][i]);
        printf("\n");
    }
    
    //Diagonal Secundária
    printf("\n\nDiagonal Secundaria\n");
    for(i=0; i<tam; i++){
            printf("%3d ", a[i][(tam-1)-i]);
        printf("\n");
    }
    return 0;
}
