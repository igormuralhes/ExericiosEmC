#include <stdio.h>
#include <stdlib.h>

/*
EXERCÍCIO 12 - Para uma turma de 45 alunos, construa um algoritmo que determine:
a) A idade média dos alunos com menos de 1,70m de altura;
b) A altura média dos alunos com mais de 20 anos.
*/

int main()
{
    int i, idade, idadeBaixos=0, qtdeIdadeBaixos=0, qtdeAlturaM20=0;
    float altura, alturaMedia, idadeMedia, alturaM20=0;
    
    for(i=1; i<=45; i++){
        printf("Digite sua idade e altura em metros: ");
        scanf("%d%f", &idade, &altura);
        
        //solucao de a
        if(altura<1.7){
            idadeBaixos += idade;
            qtdeIdadeBaixos++;
        }
        
        //solucao de b
        if(idade>20){
            alturaM20 += altura;
            qtdeAlturaM20++;
        }
    }
    
    idadeMedia = (float)idadeBaixos/qtdeIdadeBaixos;
    alturaMedia = alturaM20/qtdeAlturaM20;
    
    printf("\nIdade Media alunos < 1.70m: %.2f", idadeMedia);
    printf("\nAltura Media alunos > 20 anos: %.2f", alturaMedia);
    
    return 0;
}
